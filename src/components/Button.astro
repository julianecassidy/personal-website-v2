---
export interface Props {
  href: string;
  className?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
  text: string;
}

const {
  href,
  text,
  className,
  ariaLabel,
  title,
  disabled = false,
} = Astro.props;
---

<a
  href={disabled ? "#" : href}
  tabindex={disabled ? "-1" : "0"}
  aria-label={ariaLabel}
  title={title}
  aria-disabled={disabled}
>
  <button class=`${className} group`>
    {text}
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="18"
      height="18"
      viewBox="0 0 24 24"
      fill="none"
      stroke="#fffff7"
      class="-rotate-180 transform transition-all group-hover:rotate-0"
      ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
    >
  </button>
</a>

<style>
  button {
    @apply bg-button rounded px-3 py-3 text-center lowercase whitespace-nowrap
        hover:bg-secondary;
  }
  a {
    @apply text-white no-underline;
  }
  svg {
    @apply inline-block;
  }
</style>
