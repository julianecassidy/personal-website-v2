---
export interface Props {
    href: string;
    className?: string;
    ariaLabel?: string;
    title?: string;
    disabled?: boolean;
    text: string;
}

const {
    href,
    text,
    className,
    ariaLabel,
    title,
    disabled = false,
} = Astro.props;
---

<button class=`${className} group`>
    <a
        href={disabled ? "#" : href}
        tabindex={disabled ? "-1" : "0"}
        aria-label={ariaLabel}
        title={title}
        aria-disabled={disabled}
    >
        {text}
    </a>
    <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="#fffff7"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="-rotate-180 transform transition-all group-hover:rotate-0"
        ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
    >
</button>

<style>
    button {
        @apply bg-primary rounded px-2 py-2 text-center whitespace-nowrap;
    }
    a {
        @apply text-fill lowercase no-underline;
    }
</style>
